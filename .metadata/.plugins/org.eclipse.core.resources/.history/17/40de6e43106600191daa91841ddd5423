package com.gmail.a.a.kravchenko;

public class Main {

	public static void main(String[] args) {
		Point centrePoint = new Point(0, 0);
		Point circlePoint = new Point(5, 5);
		Circle oneCircle = new Circle(centrePoint, circlePoint);

		Point pointA = new Point(0, 0);
		Point pointB = new Point(5, 0);
		Point pointC = new Point(0, 5);
		Point pointD = new Point(5, 5);
		Tetragon oneTetragon = new Tetragon(pointA, pointB, pointC, pointD);

		Point centrePointTwo = new Point(0, 0);
		Point circlePointTwo = new Point(5, 5);
		Circle twoCircle = new Circle(centrePointTwo, circlePointTwo);

		Board board = new Board();
		board.toAddFigure(oneCircle, 1);
		board.toAddFigure(oneTetragon, 3);
		board.toAddFigure(twoCircle, 2);

		try {
			Triangle oneTriangle = new Triangle(pointA, pointB, pointC);
			System.out.println("oneTriangle: " +oneTriangle.getPerimetr());
			board.toAddFigure(oneTriangle, 0);
		} catch (IllegalArgumentException e) {
			e.getMessage();
		}

		board.toPrintInfo();
		Triangle duplicateTriangle = (Triangle) board.getFigure(0);
		System.out.println('\r'+"duplicateTriangle: " + duplicateTriangle.getPerimetr() + '\r');
		System.out.println(board.toDeleteFigure(1));
		board.toPrintInfo();
	}

}
